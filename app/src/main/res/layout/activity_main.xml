<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main.MainActivity"
        android:orientation="vertical">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#8BC34A"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/linearLayout">
        <TextView
                android:id="@+id/instructiontitle"
                android:text="내 나이가 어때서"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8BC34A"
                android:textSize="30dp"
                android:textColor="#fff"
                android:padding="10dp"
                />

    </LinearLayout>

    <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="명언 한 조각"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/todayQuote"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:id="@+id/quote"
            android:textStyle="bold"
            android:text="당신을 죽일 수 없는 것은 당신을 더 강하게 만든다."
            android:textColor="#000"

            android:layout_margin="10dp"
    />
    <TextView
            android:id="@+id/quotedfrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="25dp"
            android:textColor="#000"

            android:textStyle="bold"
            android:text="- 프리드리히 니체"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"

    />
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="165dp"
                android:layout_height="100dp"
                android:background="@drawable/main_buttons"
                android:id="@+id/blank1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/bt_guide"
                style="?android:attr/borderlessButtonStyle"
                >
        </ImageView>

        <ImageView
                android:layout_width="57dp"
                android:layout_height="65dp"
                android:background="@drawable/main_buttons"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/blank2"
                app:layout_constraintLeft_toRightOf="@id/bt_travelandfood"
                app:layout_constraintBottom_toTopOf="@id/info"
                app:layout_constraintRight_toRightOf="parent"
                >
        </ImageView>

        <Button
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:text="앱\n설명서"
                android:textStyle="bold"
                android:textSize="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/main_buttons"
                android:id="@+id/bt_guide"
                style="?android:attr/borderlessButtonStyle"
                app:layout_constraintTop_toBottomOf="@id/blank1"
        />

        <Button
                android:layout_width="247dp"
                android:layout_height="265dp"
                android:text="핸드폰이\n이상해요"
                android:textSize="40dp"
                style="?android:attr/borderlessButtonStyle"
                android:textStyle="bold"
                android:background="@drawable/main_as"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/bt_as"/>

        <Button
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:text="조작법"
                android:background="@drawable/main_practice"
                android:textStyle="bold"
                android:textSize="40dp"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/bt_practice"
                app:layout_constraintTop_toBottomOf="@id/bt_guide"
                />
        <Button
                android:layout_width="190dp"
                android:layout_height="165dp"
                android:text="여행/맛집"
                android:textStyle="bold"
                android:textSize="38dp"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/main_buttons"
                android:id="@+id/bt_travelandfood"
                app:layout_constraintLeft_toRightOf="@id/bt_practice"
                app:layout_constraintBottom_toBottomOf="parent"
        />

<!--    <View-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="0dp"-->
<!--            android:layout_weight="1" />-->

    <Button
            android:layout_width="57dp"
            android:layout_height="100dp"
            android:layout_gravity="end"
            android:text="앱\n정보"
            android:textSize="20dp"
            android:background="@drawable/main_info"
            app:layout_constraintLeft_toRightOf="@id/bt_travelandfood"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/info"
            style="?android:attr/borderlessButtonStyle"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:layout_above="@id/adView"
                >
        </TextView>

        <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                app:adSize="BANNER"
                app:adUnitId="@string/banner_ad_unit_id">
        </com.google.android.gms.ads.AdView>


    </RelativeLayout>


</LinearLayout>
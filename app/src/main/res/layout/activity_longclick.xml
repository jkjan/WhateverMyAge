<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Practice.Scroll"
        android:orientation="vertical"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#8BC34A"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/linearLayout">
        <ImageButton
                android:id="@+id/bt_back"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/back"
                android:theme="@style/AppTheme.GreenRipple"
                android:background="?selectableItemBackground"
                />

        <TextView
                android:id="@+id/instructiontitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8BC34A"
                android:padding="10dp"
                android:text="길게 누르기"
                android:textColor="#fff"
                android:textSize="30dp" />

    </LinearLayout>

    <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="'길게 누르기'는 버튼을 길게 \n누르고 있을 경우 나타나는 결과입니다."
            android:textSize="25dp"
            android:layout_margin="10dp"/>

    <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="버튼을 길게 눌러보세요!"
            android:textSize="25dp"
            android:layout_margin="10dp"/>

    <Button
            android:textSize="30dp"
            android:id="@+id/bt_long"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="버튼" />

    <TextView
            android:id="@+id/tv_successlong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="성공하셨습니다!\n이 기능으로 카카오톡에서 사진을 \n삭제하거나,사진첩의 사진을 삭제할수있습니다."
            android:textSize="30dp"
            android:visibility="invisible"
            android:layout_margin="10dp" />


</LinearLayout>
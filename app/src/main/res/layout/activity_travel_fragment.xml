<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TravelAndFood.TravelFragment">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity ="center"
            android:fillViewport="true"
            android:layout_marginTop="0dp"
            android:id="@+id/sv">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
    >

        <ImageView
                android:id="@+id/iv_TravelPic1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

        />
        <TextView
                android:id="@+id/travelspot1"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />
        <ImageView
                android:id="@+id/iv_TravelPic2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

        />
        <TextView
                android:id="@+id/travelspot2"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />
        <ImageView
                android:id="@+id/iv_TravelPic3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

        />
        <TextView
                android:id="@+id/travelspot3"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />
        <ImageView
                android:id="@+id/iv_TravelPic4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

        />
        <TextView
                android:id="@+id/travelspot4"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />
        <ImageView
                android:id="@+id/iv_TravelPic5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

        />
        <TextView
                android:id="@+id/travelspot5"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />


    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
